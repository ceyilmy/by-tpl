{
    "name": "bb-studio/by-tpl",
    "description": "The ThinkPHP6 tpl Package",
    "license": "Apache-2.0",
    "type": "library",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "BoyangLee",
            "email": "1401211620@qq.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "topthink/framework": "^6.0.0",
        "topthink/think-view": "^1.0",
        "topthink/think-helper": "^3.0.0"
    },
    "autoload": {
        "psr-4": {
            "think\\": "src/"
        },
        "files": [
            "src/common.php"
        ]
    },
    "extra": {
        "think": {
            "services": [
                "think\\tpl\\TplService"
            ],
            "config":{
                "tpl": "src/config.php"
            }
        }
    },
    "scripts" : {
        "post-install-cmd": [
            "php think tpl:config"
        ]
    }
}
